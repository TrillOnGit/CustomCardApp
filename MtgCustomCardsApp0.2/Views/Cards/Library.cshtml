@model IEnumerable<MtgCustomCardsApp0._2.Models.Card>

<h2>Library</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Power</th>
        <th>Toughness</th>
        <th>Text</th>
        <th>Type</th>
        <th>SubType</th>
        <th>Flavor</th>
    </tr>

    @foreach (var card in @Model)
    {
        <tr>
            <td><a href=/Cards/ViewCard/@card.CardId>@card.CardId</a></td>
            <td>@card.Name</td>
            <td>@card.Power</td>
            <td>@card.Toughness</td>
            <td style="word-break: break-word" width="25%">@card.CardText</td>
            <td>@card.Type</td>
            <td>@card.SubType</td>
            <td style="word-break: break-word" width="15%" class="fst-italic">@card.CardFlavorText</td>
        </tr>
    }

</table>

<div style="display: block">
    <a href="/Cards/CardCreator/">Create a New Card!</a>
</div>