@model MtgCustomCardsApp0._2.Models.Card


@using (Html.BeginForm("InsertCardToDatabase", "Cards", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @* <!doctype html> *@
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>MTG Card Creator</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link rel="stylesheet" href="stylesheet.css">
    </head>

    <body>
    <h1 class="text-center display-5">Magic the Gathering Card Creator</h1>

    <div class="container d-flex align-items-center justify-content-center">
        <div class="card">
            <div class="card-body">
                @*<form enctype="multipart/form-data" id="uploadForm">*@

                    <!-- 2 column grid layout with text inputs for card name and mana cost -->
                    <div class="mt-1 row">
                        <div class="col-sm-9">
                            <input id="card-name" class="form-control bg-dark" name="Name" type="text" maxlength="22" required/>
                            <label class="form-label" for="card-name">Card Name</label>
                        </div>

                        <div class="col-sm-3">
                            <input id="mana-cost" class="form-control bg-dark" name="CardManaCostString" type="text" maxlength="22"/>
                            <label for="mana-cost">Mana Cost</label>
                        </div>
                    </div>

                    <!--Card image field-->
                    <!--Full width grid layout for image-->
                    <div class="mt-2" asp-for="img">
                        <input type="file" class="form-control" id="imageInput" accept="image/*" name="img" onclick="uploadImage()" asp-for="CardImg">
                        <div id="imagePreview" class="mt-2"></div>
                    </div>

                    <!-- 2 column grid layout with text inputs for card type and card sub type -->
                    <div class="mt-2 row">
                        <div class="col-sm-3 mt-2 text-center">
                            <fieldset class="form-check-end form-switch">
                                <input class="form-check-input" id="card-isLegendary" name="IsLegendary" type="checkbox" role="switch" asp-for="CreateCardRequest.IsLegendary" value="true"/>
                                <label for="card-isLegendary" class="form-check-label text-end">Legendary</label>
                            </fieldset>
                        </div>
                        <div class="col-sm-5">
                            <fieldset class="form-outline">
                                <input id="card-type" class="form-control bg-dark" name="Type" type="text" maxlength="22"/>
                                <label for="card-type">Card Type</label>
                            </fieldset>
                        </div>

                        <div class="col-sm-4">
                            <fieldset class="form-outline">
                                <input id="card-sub-type" class="form-control bg-dark" name="SubType" type="text" maxlength="22"/>
                                <label for="card-sub-type">Card Sub-Type</label>
                            </fieldset>
                        </div>
                    </div>

                    <div class="mt-2 row">
                        <fieldset id="card-text-field">
                            <textarea class="col-sm-12 bg-secondary" id="card-text" name="CardText" maxlength="266"></textarea>
                            <label for="card-text">Card Text</label>
                        </fieldset>
                    </div>

                    <div class="mt-2 row">
                        <fieldset id="card-flavor-text-field">
                            <textarea class="col-sm-12 bg-secondary fst-italic" id="card-flavor-text" name="CardFlavorText" maxlength="82"></textarea>
                            <label for="card-flavor-text">Card Flavor Text</label>
                        </fieldset>
                    </div>

                    <div class="mt-2 row">
                        <div class="col-sm">
                            <fieldset class="form-outline">
                                <input id="card-power" class="form-control bg-dark" name="Power" type="text" maxlength="2"/>
                                <label for="card-power">Power</label>
                            </fieldset>
                        </div>

                        <div class="col-sm">
                            <fieldset class="form-outline">
                                <input id="card-toughness" class="form-control bg-dark" name="Toughness" type="text" maxlength="2"/>
                                <label for="card-toughness">Toughness</label>
                            </fieldset>
                        </div>
                    </div>
                    <div class="mt-2 row">
                        <div class="col-sm-3">
                            <select class="form-select form-select-sm" name="Rarity">
                                <option selected>Rarity</option>
                                <option value="C">Common</option>
                                <option value="U">Uncommon</option>
                                <option value="R">Rare</option>
                                <option value="M">Mythic</option>
                            </select>
                        </div>
                        <div class="col-sm-9">
                            <fieldset class="form-outline">
                                <input id="card-illus" class="form-control bg-dark" name="Illustrator" type="text" maxlength="31"/>
                                <label for="card-illus">Illustrator</label>
                            </fieldset>
                        </div>
                    </div>

                    <button class="btn card-footer container-fluid mt-3 col-sm-5 bg-dark" id="create-btn" type="submit" value="Submit" onclick="uploadImage()">Create Card</button>

                @*</form>*@
            </div>
        </div>
    </div>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="script.js"></script>
    </body>


    </html>

    @* *@
    @* <input asp-for="CardId" type="hidden" value="" /> *@
    @* <input type="submit" value="Create Card" class="btn btn-primary" /> *@
}