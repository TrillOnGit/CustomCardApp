@model MtgCustomCardsApp0._2.Models.Card


<h3>@Model.Name Information</h3>

<table class="table">
    <tr>
        @* <th>ID</th> *@
        <th>Name</th>
        <th>Power</th>
        <th>Toughness</th>
        <th>Text</th>
        <th>Type</th>
        <th>SubType</th>
        <th>Flavor</th>
    </tr>
    <tr>
        @* <td>@Model.CardId</td> *@
        <td>@Model.Name</td>
        <td>@Model.Power</td>
        <td>@Model.Toughness</td>
        <td style="word-break: break-word">@Model.CardText</td>
        <td>@Model.Type</td>
        <td>@Model.SubType</td>
        <td style="word-break: break-word" class="fst-italic">@Model.CardFlavorText</td>
    </tr>
</table>

<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Custom Card</title>
</head>

<body>
<h1 class="text-center display-5">Your Cards</h1>

<div class="container d-flex">
    <div class="card">
        <div class="card-body">

            <div class="mt-1 row">
                <div class="col-sm-9">

                    @Model.Name

                </div>

                <div class="col-sm-3">
                    @Model.CardManaCostString
                </div>
            </div>

            <!--Card image field-->
            <!--Full width grid layout for image-->
            <div class="col-sm-8 mt-2">

                <img src="data:image/png;base64,@Convert.ToBase64String(Model.CardImg ?? Array.Empty<byte>())" alt="Image" style="max-width: 690px; max-height: 540px; "/>

            </div>

            <!-- 2 column grid layout with text inputs for card type and card sub type -->
            <div class="mt-2 row">
                <div class="col-sm-3 mt-2 text-center">

                    @if (Model.IsLegendary)
                    {
                        <div>Legendary</div>
                    }
                    else
                    {
                        <div></div>
                    }

                </div>
                <div class="col-sm-5">


                    @Model.Type

                </div>

                <div class="col-sm-4">


                    @Model.SubType

                </div>
            </div>

            <div class="mt-2 row">


                @Model.CardText

            </div>

            <div class="mt-2 row">


                @Model.CardFlavorText

            </div>

            <div class="mt-2 row">
                <div class="col-sm">


                    @Model.Power

                </div>

                <div class="col-sm">


                    @Model.Toughness

                </div>
            </div>

            <div class="mt-2 row">
                <div class="col-sm-3">


                    @Model.Rarity

                </div>

                <div class="col-sm-9">


                    @Model.Illustrator

                </div>
            </div>

        </div>
    </div>
</div>
<!-- Bootstrap Bundle with Popper -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="script.js"></script>
</body>

</html>

<div style="display: flex" class="mt-5 row justify-content-start">

    <div class="col-sm-2">
        <form action="/Cards/UpdateCard/@Model.CardId">
            <input type="submit" value="Update">
        </form>
    </div>

    <div class="col-sm-2">
        @using (Html.BeginForm("DeleteCard", "Cards", "Post"))
        {
            <form>
                <input type="hidden" asp-for="CardId" name="CardId" value="@Model.CardId"/>
                <input type="submit" onclick="return confirm('Are you sure?')" value="Delete"/>
            </form>
        }
    </div>
</div>