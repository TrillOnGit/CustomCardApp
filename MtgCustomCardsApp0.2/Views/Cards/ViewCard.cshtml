@model MtgCustomCardsApp0._2.Models.Card


<h3>@Model.Name Information</h3>

<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Custom Card</title>
</head>

<body>
    <h1 class="text-center display-5">Your Cards</h1>

    <div class="container d-flex">
        <div class="card">
            <div class="card-body">

                <div class="mt-1 row">
                    <div class="col-sm-9">          
                        <table class="table">
                            <tr>
                                <td>@Model.Name</td>
                            </tr>                            
                        </table>                        
                    </div>

                    <div class="col-sm-3">
                        <table class="table">
                            <tr>
                                <td>@Model.CardManaCostString</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!--Card image field-->
                <!--Full width grid layout for image-->
                <div class="mt-2">
                    <table class="table">
                        <tr>
                            <td>@Model.CardImg</td>
                        </tr>
                    </table>
                </div>

                <!-- 2 column grid layout with text inputs for card type and card sub type -->
                <div class="mt-2 row">
                    <div class="col-sm-3 mt-2 text-center">
                        <table class="table">
                            <tr>
                                <td>@Model.IsLegendary</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-sm-5">
                        <table class="table">
                            <tr>
                                <td>@Model.Type</td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-sm-4">
                        <table class="table">
                            <tr>
                                <td>@Model.SubType</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="mt-2 row">
                    <table class="table">
                        <tr>
                            <td>@Model.CardText</td>
                        </tr>
                    </table>
                </div>

                <div class="mt-2 row">
                    <table class="table">
                        <tr>
                            <td>@Model.CardFlavorText</td>
                        </tr>
                    </table>
                </div>

                <div class="mt-2 row">
                    <div class="col-sm">
                        <table class="table">
                            <tr>
                                <td>@Model.Power</td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-sm">
                        <table class="table">
                            <tr>
                                <td>@Model.Toughness</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="mt-2 row">
                    <div class="col-sm-3">
                        <table class="table">
                            <tr>
                                <td>@Model.Rarity</td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-sm-9">
                        <table class="table">
                            <tr>
                                <td>@Model.Illustrator</td>
                            </tr>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="script.js"></script>
</body>

</html>

<div style="display: block">
    <a href="/Cards/UpdateCard/@Model.CardId">Update this Card</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteCard", "Cards", "Post"))
    {
        <form>
            <input type="hidden" asp-for="CardId" name="CardId" value="@Model.CardId" />
            <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this card" />
        </form>
    }
</div>