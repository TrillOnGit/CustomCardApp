@model MtgCustomCardsApp0._2.Models.Card

<h2>Update @Model.Name</h2>

@using (Html.BeginForm("UpdateCardToDatabase", "Cards", "Post"))
{
    
    
    @* <input type="text" name="Name" class="form-control" value="@Model.Name" /> *@
    @* <label asp-for="Name" class="control-label">Name</label> *@
    @* *@
    @* *@
    @* <input type="text" name="CardText" class="form-control" maxlength="266" value="@Model.CardText" /> *@
    @* <label asp-for="CardText" class="control-label">Text</label>     *@
    @*                                                                                           *@
    @*     *@
    @* <input type="text" name="CardFlavorText" class="form-control" maxlength="86" value="@Model.CardFlavorText" /> *@
