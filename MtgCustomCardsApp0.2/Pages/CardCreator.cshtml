@page
@model MtgCustomCardsApp0._2.Pages.CardCreatorModel
@{

    var message = ViewData["Message"]?.ToString();

}


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MTG Card Creator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheet.css">


</head>

<body>
    <h1 class="text-center display-3">Magic the Gather Card Creation Template</h1>

    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }

    <div class="container d-flex align-items-center justify-content-center">
        <div class="card">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">

                    <!-- 2 column grid layout with text inputs for card name and mana cost -->
                    <div class="container-fluid mt-1 mb-4">
                        <div class="row">
                            <div class="col-sm-6 p-6">
                                <fieldset class="form-outline">
                                    <input id="card-name" class="form-control bg-dark" type="text" maxlength="22" asp-for="CreateCardRequest.Name" />
                                    <label for="card-name">Card Name</label>
                                </fieldset>
                            </div>

                            <div class="col-sm-6 p-6">
                                <fieldset id="mana-cost">
                                    <input id="mana-cost" class="form-control bg-dark" type="text" maxlength="22" asp-for="CreateCardRequest.CardManaCostString" />
                                    <label for="mana-cost">Mana Cost</label>
                                </fieldset>
                            </div>
                        </div>
                    </div>

                    <!--Card image field-->
                    <!--Full width grid layour for image-->
                    <div class="container mt-1">
                        <input type="file" name="image" id="imageInput" asp-action="Upload" asp-for="CreateCardRequest.CardImg">
                        <div id="imagePreview" class="mt-3"></div>
                    </div>

                    <!-- 2 column grid layout with text inputs for card type and card sub type -->
                    <div class="container-fluid mt-2">
                        <div class="row">
                            <div class="col-sm-6 p-6">
                                <fieldset class="form-outline mb-4">
                                    <input id="card-type" class="form-control bg-dark" type="text" maxlength="22" asp-for="CreateCardRequest.Type"/>
                                    <label for="card-type">Card Type</label>
                                </fieldset>
                            </div>

                            <div class="col-sm-6 p-6">
                                <fieldset class="form-outline mb-4">
                                    <input id="card-sub-type" class="form-control bg-dark" type="text" maxlength="22" asp-for="CreateCardRequest.SubType"/>
                                    <label for="card-sub-type">Card Sub-Type</label>
                                </fieldset>
                            </div>
                        </div>
                    </div>

                    <div class="container-fluid mt-3">
                        <div class="row">
                            <fieldset id="card-text-field">
                                <textarea class="col-sm-12 p-12 bg-secondary" id="card-text" maxlength="266" asp-for="CreateCardRequest.CardText"></textarea>
                                <label for="card-text">Card Text</label>
                            </fieldset>
                        </div>
                    </div>

                    <div class="container-fluid mt-3">
                        <div class="row">
                            <fieldset id="card-flavor-text-field">
                                <textarea class="col-sm-12 p-12 bg-secondary" id="card-flavor-text"  maxlength="82" asp-for="CreateCardRequest.CardFlavorText"></textarea>
                                <label for="card-flavor-text">Card Flavor Text</label>
                            </fieldset>
                        </div>
                    </div>

                    <div class="container-fluid mt-2">
                        <div class="row">
                            <div class="col-sm-6 p-6">
                                <fieldset class="form-outline mb-4">
                                    <input id="card-power" class="form-control bg-dark" type="text" maxlength="2" asp-for="CreateCardRequest.Power"/>
                                    <label for="card-power">Power</label>
                                </fieldset>
                            </div>

                            <div class="col-sm-6 p-6">
                                <fieldset class="form-outline mb-4">
                                    <input id="card-toughness" class="form-control bg-dark"  type="text" maxlength="2" asp-for="CreateCardRequest.Toughness"/>
                                    <label for="card-toughness">Toughness</label>
                                </fieldset>
                            </div>
                        </div>
                    </div>

                    <div class="container-fluid mt-2">
                        <div class="row">
                            <div class="col-sm-1 p-1">
                                <fieldset class="form-outline mb-4">
                                    <input id="card-isLegendary" class="form-control" type="checkbox" asp-for="CreateCardRequest.IsLegendary"/>
                                    <label for="card-isLegendary">Legendary?</label>
                                </fieldset>
                            </div>

                            <div class="col-sm-3 p-3">
                                <fieldset class="form-outline mb-4">
                                    <input id="card-rarity" class="form-control bg-dark"  type="text" maxlength="1" asp-for="CreateCardRequest.Rarity"/>
                                    <label for="card-rarity">Rarity</label>
                                </fieldset>
                            </div>
                        </div>
                    </div>

                    <div class="align-items-center justify-content-center">
                        <fieldset class="form-outline mb-2">
                            <input id="card-illus" class="form-control bg-dark" type="text" maxlength="31" asp-for="CreateCardRequest.Illustrator"/>
                            <label for="card-illus">Illustrator</label>
                        </fieldset>
                    </div>

                    <button class="btn card-footer container-fluid mt-3 col-sm-5 bg-dark" id="create-btn" type="submit" value="Submit">Create Card</button>

                </form>
            </div>
        </div>
    </div>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="script.js"></script>
</body>



</html>
